<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.luwei.system.mapper.AppUserMapper">
    <resultMap id="AppUser" type="com.luwei.system.domain.AppUser">
        <result property="userId" column="user_id"/>
        <result property="username" column="username"/>
        <result property="openId" column="open_id"/>
        <result property="email" column="email"/>
        <result property="phoneNumber" column="phone_number"/>
        <result property="sex" column="sex"/>
        <result property="avatar" column="avatar"/>
        <result property="password" column="password"/>
        <result property="status" column="status"/>
        <result property="deleted" column="deleted"/>
        <result property="loginIp" column="login_ip"/>
        <result property="loginDate" column="login_date"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
        <result property="introduction" column="introduction"/>
        <result property="school" column="school"/>
        <result property="backgroundUrl" column="background_url"/>
        <result property="identityId" column="identity_id"/>
        <result property="qualificationId" column="qualification_id"/>
        <result property="identityName" column="identity_name"/>
        <result property="auditTime" column="audit_time"/>

    </resultMap>

    <resultMap id="AppUserAuditDTO" type="com.luwei.system.domain.dto.AppUserAuditDTO">
        <result property="userId" column="user_id"/>
        <result property="createTime" column="create_time"/>
        <result property="identityId" column="identity_id"/>
        <result property="qualificationId" column="qualification_id"/>
        <result property="identityName" column="identity_name"/>
        <collection property="appRole" javaType="java.util.List"
                    resultMap="com.luwei.system.mapper.AppRoleMapper.AppRoleSimple"/>
    </resultMap>
    <select id="selectAppUserList" resultType="com.luwei.system.domain.vo.AppUserSysVO"
            parameterType="com.luwei.system.domain.query.AppUserIdentityQuery">
        SELECT au.user_id,au.username,au.status,au.create_time,au.login_date
        , ar.role_name
        , aur.app_role_id
        FROM app_user au
        left join app_user_role aur on au.user_id = aur.app_user_id
        left join app_role ar on ar.role_id = aur.app_role_id
        <where>
            <if test="query.userId != null and query.userId != ''">
                au.user_id = #{query.userId}
            </if>
            <if test="query.phone != null and query.phone != ''">
                au.phone = #{query.phone}
            </if>
            <if test="query.userRoleId != null">
                ar.role_id = #{query.userRoleId}
            </if>
            <if test="query.auditStatus != null">
                au.audit_status = #{query.auditStatus}
            </if>
            <if test="query.userId != null">
                au.user_id = #{query.userId}
            </if>
        </where>
    </select>
    <select id="getAppUserLoginUserByOpenId" resultType="com.luwei.system.api.model.AppUserLoginUser"
            parameterType="java.lang.String">
SELECT
au.user_id,au.username,au.`password`,au.email,au.phone_number,au.sex,au.avatar,au.login_date,au.remark,au.school,au.background_url
, ao.open_id,ao.open_id_type
FROM app_user au
left join app_user_open_id ao on au.user_id = ao.user_id
<where>
    ao.open_id= #{openId}
    and au.deleted = 0
</where>

    </select>
</mapper>